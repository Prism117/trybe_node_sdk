{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "outDir": "dist",
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["src/**/*"],
  "exclude": ["node_modules/**", "**/*.spec.ts"]
}
